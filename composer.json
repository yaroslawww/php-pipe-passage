{
    "name": "yaroslawww/php-pipe-passage",
    "description": "Alternative implementation 'Chain of Responsibility' pattern, using pipe.",
    "keywords": [
        "php",
        "pattern"
    ],
    "homepage": "https://github.com/yaroslawww/php-pipe-passage",
    "license": "MIT",
    "authors": [
        {
            "name": "Yaroslav Georgitsa",
            "email": "yaroslav.georgitsa@gmail.com",
            "homepage": "https://github.com/yaroslawww",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.10"
    },
    "autoload": {
        "psr-4": {
            "PipePassage\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PipePassage\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
